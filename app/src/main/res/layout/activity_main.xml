    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/info"
        tools:layout_editor_absoluteX="0dp">

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
